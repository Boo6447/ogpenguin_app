{
  "name": "originalpenguin",
  "productName": "Original Penguin App",
  "version": "5.3.0",
  "description": "Join Original Penguin now!",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "publish-windows": "electron-forge publish",
    "publish-mac": "electron-forge publish --arch=x64",
    "publish-git": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": "Fullmoon",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "lib/icons/icon.icns",
        "name": "OriginalPenguin",
        "executableName": "originalpenguin",
        "platform": {
          "linux": {
            "name": "OriginalPenguin"
          }
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "originalpenguin",
            "productName": "Original Penguin App",
            "authors": "Fullmoon",
            "loadingGif": "./src/assets/default-splash.gif",
            "setupIcon": "./lib/icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "name": "originalpenguin",
              "productName": "OriginalPenguin",
              "genericName": "OriginalPenguin"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-flatpak",
          "config": {
            "genericName": "OriginalPenguin",
            "productName": "OriginalPenguin",
            "categories": [
              "Game"
            ],
            "modules": [
              {
                "name": "zypak",
                "sources": [
                  {
                    "type": "git",
                    "url": "https://github.com/refi64/zypak",
                    "tag": "v2022.04"
                  }
                ]
              }
            ],
            "runtimeVersion": "22.08",
            "baseVersion": "22.08",
            "icon": "./lib/icons/icon.ico"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "fullmoondev",
              "name": "ogpenguin_app"
            },
            "prerelease": false
          }
        }
      ]
    }
  },
  "build": {
    "extraResources": [
      {
        "from": "./lib/",
        "to": "lib",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "pl.moonlightstudios.ogpenguinapp",
    "productName": "Original Penguin App",
    "linux": {
      "productName": "OriginalPenguin"
    },
    "copyright": "Copyright Â© 2025 ${author}",
    "mac": {
      "icon": "./lib/icons/icon.icns",
      "category": "lib.games.originalpenguin"
    },
    "win": {
      "icon": "./lib/icons/icon.png"
    },
    "directories": {
      "buildResources": "lib"
    },
    "protocols": [
      {
        "name": "originalpenguin",
        "schemes": [
          "originalpenguin"
        ]
      }
    ]
  },
  "dependencies": {
    "async-dialog": "0.0.1",
    "dialogs": "^2.0.1",
    "discord-rpc": "^4.0.1",
    "electron-prompt": "^1.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "update-electron-app": "^2.0.1",
    "es5-ext": "<=0.10.64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-appx": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-flatpak": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "electron": "11.5.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
